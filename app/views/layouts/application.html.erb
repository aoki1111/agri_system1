<!DOCTYPE html>
<html>
    <%= render 'layouts/head' %>
    <body ontouchstart="" data-controller="<%= controller_name %>" data-action="<%= action_name %>">
        <div class="contents">
            <%= render 'layouts/header' %>
            <div class="container">
                <% flash.each do |message_type, message| %>
                    <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
                <% end %>
                <%= yield %>
            </div>
        </div>
        <%= render 'layouts/footer' %>
    </body>
</html>
