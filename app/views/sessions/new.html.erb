<% provide(:title, "ログイン") %>
<div class="main">
    <div class="login-form form">
        <h1>ログイン</h1>
        <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email,"メールアドレス" %>
        <%= f.email_field :email, class: 'form-under-line' %>

        <%= f.label :password, "パスワード" %>
        <%= link_to "（パスワードを忘れた方はこちら）", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-under-line password_form' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保持する</span>
        <% end %>

        <%= button_tag class: "btn btn-primary" do %>ログイン<% end %>
        <% end %>

        <p style="margin-top:20px;">ユーザー登録が済んでいない場合は<%= link_to "こちらから会員登録", signup_path %></p>
    </div>
</div>
