<div class="stock">
    <div class="stock-data">
        <div>
            <div class="title">商品タイプ</div><div class="data">：季節の野菜セット</div>
        </div>
        <% first_day = Date.today.beginning_of_year %>
        <% path_day = middle_box.shipment_week * 7 %>
        <% week_day = first_day + path_day - first_day.cwday + 1 - 7 %>
        <div>
            <div class="title">出荷予定週</div><div class="data">：<%= week_day.strftime("%m月%d日週出荷分") %></div>
        </div>
        <div>
            <% if middle_box.salable > Time.zone.now %>
            <div class="title">出荷予定数</div>
            <% else %>
            <div class="title">出荷登録数</div>
            <% end %>
            <div class="data">：<%= middle_box.quantity %></div>
        </div>
        <div>
            <div class="title">備考</div><div class="data">：<%= middle_box.remark %></div>
        </div>
    </div>
    <div class="stocks-controll">
            <%= button_to edit_stock_path(middle_box),method: :get do %><%= icon('fas', 'edit') %><span>出荷予定編集</span><%= icon('fas', 'chevron-right') %><% end %>
            <%= button_to stock_path(middle_box),method: :get do %><%= icon('fas', 'info') %><span>発送確認</span><%= icon('fas', 'chevron-right') %><% end %>
    </div>
</div>
