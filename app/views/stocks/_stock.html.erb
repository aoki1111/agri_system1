<div class="stock">
    <div>
        <div class="title">商品タイプ</div>
        <% if  stock.type == "MiddleBox" %>
        <div>：季節の野菜セット</div>
        <% elsif stock.type == "FewItemBox" %>
        <div>：小品目BOX</div>
        <% end %>
    </div>
    <% first_day = Date.today.beginning_of_year %>
    <% path_day = stock.shipment_week * 7 %>
    <% week_day = first_day + path_day - first_day.cwday + 1 - 7 %>
    <div>
        <div class="title">出荷予定週</div><div>：<%= week_day.strftime("%m月%d日週出荷分") %></div>
    </div>
    <div>
        <div class="title">出荷予定数</div><div>：<%= stock.quantity %></div>
    </div>
    <div>
        <div class="title">備考</div><div>：<%= stock.remark %></div>
    </div>
</div>
